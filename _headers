# Security Headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: 
    default-src 'self';
    script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google-analytics.com https://www.googletagmanager.com https://cdn.jsdelivr.net;
    style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;
    font-src 'self' data: https://fonts.gstatic.com https://cdn.jsdelivr.net;
    img-src 'self' data: https:;
    connect-src 'self' https://www.google-analytics.com https://*.firebaseio.com wss://*.firebaseio.com;
    frame-src 'self' https://www.youtube.com https://www.google.com;
    object-src 'none';
    base-uri 'self';
    form-action 'self';
    frame-ancestors 'none';
    block-all-mixed-content;
    upgrade-insecure-requests;
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Permissions-Policy: 
    accelerometer=(),
    camera=(),
    geolocation=(),
    gyroscope=(),
    magnetometer=(),
    microphone=(),
    payment=(),
    usb=()
  X-DNS-Prefetch-Control: on
  
# Cache Control for Static Assets
/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.png
/*.jpg
/*.jpeg
/*.gif
/*.svg
  Cache-Control: public, max-age=31536000, immutable

# Sitemap
/sitemap.xml
  Content-Type: application/xml
  Cache-Control: public, max-age=3600

# HTML Files
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Service Worker
/service-worker.js
  Cache-Control: no-cache, no-store, must-revalidate
  Service-Worker-Allowed: /

# Security for Admin Pages
/admin/*
  X-Robots-Tag: noindex, nofollow
  Cache-Control: no-cache, no-store, must-revalidate

# API Endpoints
/api/*
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization
  Vary: Origin

# 404 Page
/404.html
  Cache-Control: public, max-age=0, must-revalidate
  Status: 404

# Security for Source Maps
/*.map
  X-SourceMap: off
  X-Content-Type-Options: nosniff
  Cache-Control: no-cache, no-store, must-revalidate
